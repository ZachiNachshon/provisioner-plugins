[run]
# Measure only the code specified on the source folder (prevent deep scan into poetry bundled files)
source = python_core_lib

# Restrict the scope of investigation during code coverage calculation time
# include = utils/*.py

source = 
    python_core_lib

omit = 
    */site-packages/*
    */external/*
    */loguru/*
    *_fakes.py
    *__init__.py
    *__main__.py
    */templates/*
    *_test.py
    *test_lib*
    

[report]
omit = 
    */site-packages/*
    */external/*
    */loguru/*
    *__init__.py
    *__main__.py
    */templates/*
    *_test.py
    *test_lib*

