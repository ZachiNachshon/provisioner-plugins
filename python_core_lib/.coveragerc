[run]
# Measure only the code specified on the source folder (prevent deep scan into poetry bundled files)
source = python_core_lib
# source = python_core_lib/*
# source = 
#     python_core_lib/cli
#     python_core_lib/colors
#     python_core_lib/config
#     python_core_lib/errors
#     python_core_lib/info
#     python_core_lib/infra
#     python_core_lib/runner
#     python_core_lib/utils

# Restrict the scope of investigation during code coverage calculation time
# include = utils/*.py

omit = 
    */site-packages/*
    */external/*
    */loguru/*
    *_fakes.py
    *__init__.py
    *__main__.py
    */templates/*
    *_test.py
    

[report]
omit = 
    */site-packages/*
    */external/*
    */loguru/*
    *__init__.py
    *__main__.py
    */templates/*
    *_test.py
